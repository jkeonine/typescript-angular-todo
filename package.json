{
  "name": "angular-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "postinstall": "typings install",
    "clean": "rimraf js public",
    "tsc-client": "tsc -p ./src/todo/tsconfig.json",
    "bundle": "webpack js/src/todo/app.module.js js/todo.js",
    "minify": "uglifyjs -c -m -o js/todo.min.js js/todo.js",
    "copy": "copyfiles -f ./node_modules/angular/angular.min.js ./node_modules/todomvc-common/base.js ./node_modules/todomvc-common/base.css ./node_modules/todomvc-app-css/index.css ./js/todo.min.js public",
    "tsc-server": "tsc -p ./server/tsconfig.json",
    "build": "npm run clean && npm run tsc-client && npm run bundle && npm run minify",
    "server": "npm run tsc-server && node js/server.js",
    "start": "npm run build && npm run copy && npm run server"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "angular": "^1.5.7",
    "express": "^4.13.4",
    "todomvc-app-css": "^2.0.0",
    "todomvc-common": "^1.0.1"
  },
  "devDependencies": {
    "copyfiles": "^1.0.0",
    "rimraf": "^2.5.2",
    "typescript": "^1.8.10",
    "typings": "^0.8.1",
    "uglify-js": "^2.6.4",
    "webpack": "^1.13.1"
  }
}