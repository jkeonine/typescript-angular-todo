{
  "name": "angular-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "config": {
    "outputDir": "js",
    "publicDir": "public"
  },
  "scripts": {
    "postinstall": "typings install",
    "clean": "rimraf %npm_package_config_outputDir% %npm_package_config_publicDir%",
    "tsc-client": "tsc -p ./client/todo/tsconfig.json",
    "bundle": "webpack",
    "minify": "uglifyjs -c -m -o %npm_package_config_outputDir%/todo.min.js %npm_package_config_outputDir%/todo.js",
    "copy": "copyfiles -f ./node_modules/angular/angular.min.js ./node_modules/todomvc-common/base.js ./node_modules/todomvc-common/base.css ./node_modules/todomvc-app-css/index.css ./%npm_package_config_outputDir%/todo.min.js %npm_package_config_publicDir%",
    "tsc-server": "tsc -p ./server/tsconfig.json",
    "prebuild": "npm run clean",
    "build": "npm run tsc-client && npm run bundle",
    "postbuild": "npm run minify && npm run copy",
    "server": "npm run tsc-server && node %npm_package_config_outputDir%/server.js",
    "start": "npm run build && npm run server"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "angular": "^1.5.7",
    "express": "^4.13.4",
    "todomvc-app-css": "^2.0.0",
    "todomvc-common": "^1.0.1"
  },
  "devDependencies": {
    "copyfiles": "^1.0.0",
    "rimraf": "^2.5.2",
    "typescript": "^1.8.10",
    "typings": "^0.8.1",
    "uglify-js": "^2.6.4",
    "webpack": "^1.13.1"
  }
}
